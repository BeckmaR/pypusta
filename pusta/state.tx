Diagram:
    '@startuml'
    expressions*=Expression
    '@enduml'
;

Expression:
    TransitionExpression | StateDescriptionExpression
;

TransitionExpression:
    from=StateIdentifier Arrow to=StateIdentifier
;

StateDescriptionExpression:
    state=RegularState ':' description=Text
;

StateIdentifier:
    RegularState | InitialFinalState
;

RegularState:
    name=ID
;

InitialFinalState: '[*]';

Text:
    /(.*?)\n/
;

Arrow:
    '->' | '-->'
;
